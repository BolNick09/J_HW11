<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">

    <display-name>J_HW11 Servlet Application</display-name>

    <!-- Задание 1: Сервлет с цитатой -->
    <servlet>
        <servlet-name>QuoteServlet</servlet-name>
        <servlet-class>com.example.servlets.QuoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuoteServlet</servlet-name>
        <url-pattern>/quote</url-pattern>
    </servlet-mapping>

    <!-- Задание 2: Сервлет с максимумом -->
    <servlet>
        <servlet-name>MaxNumberServlet</servlet-name>
        <servlet-class>com.example.servlets.MaxNumberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaxNumberServlet</servlet-name>
        <url-pattern>/max</url-pattern>
    </servlet-mapping>

    <!-- Задание 3: Сервлет с максимумом и средним -->
    <servlet>
        <servlet-name>MathServlet</servlet-name>
        <servlet-class>com.example.servlets.MathServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MathServlet</servlet-name>
        <url-pattern>/math</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>